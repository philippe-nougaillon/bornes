<p id="notice"><%= notice %></p>

<h1><%= link_to "Bornes de Recharge pour Véhicules Électriques" %></h1>
<br /><br />

<%= form_tag bornes_path, :method => :get do %>
  <div class="row">

    <div class="col-sm-4">
      <div class="form-group">
        <label>Nom Station/Adresse/Enseigne</label>
        <%= text_field_tag :search, params[:search], class: "form-control mr-sm-4" %>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="form-group">
        <label for="puissance">Puissance mini (kWh)</label>
        <%= select_tag :puissance,
                        options_for_select([3,7,11,22,43,50], params[:puissance]),
                        class: "form-control mr-sm-2", 
                        onchange:'this.form.submit()' %>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="form-group">
        <label class="form-check-label ml-sm-5">
          à proximité?
          <%= check_box_tag :nearby, 1, 
                            (params[:nearby] == '1'), 
                            class: "form-control mr-sm-2", 
                            onchange:'this.form.submit()' %>
        </label>
      </div>
    </div>

    <div class="col-sm-2">
      <div class="form-group">
        <label class="form-check-label ml-sm-5">
          que les stations?
          <%= check_box_tag :stations, 1, 
                            (params[:stations] == '1'), 
                            class: "form-control mr-sm-2",
                            onchange:'this.form.submit()' %>
        </label>
      </div>
    </div>

    <div class="col-sm-2">
      <%= submit_tag "Rechercher", :name => nil, class: "btn-sm btn-success ml-sm-5" %>
    </div>

  </div>
<% end %>

<br />

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Nom station</th>
      <th>Adresse</th>
      <th>Enseigne</th>
      <th>Distance</th>
      <th>Type prise</th>
      <th>Puiss max</th>
    </tr>
  </thead>
  <tfoot>
    <th /><th /><th /><th /><th /><th />
  </tfoot>

  <tbody>
    <% @bornes.each do |borne| %>
      <tr>
        <td><%= link_to borne.n_station, borne %></td>
        <td><%= borne.ad_station %></td>
        <td><%= borne.n_enseigne %></td>
        <td>
            <% if dist = borne.try(:distance) %>
              <%= dist.round(0) %> km
            <% end %> 
        </td>
        <td><%= borne.type_prise %></td>
        <td><%= borne.puiss_max %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @bornes, renderer: BootstrapPagination::Rails %>
<div class="page_info">
  <%= page_entries_info @posts %>
</div>
